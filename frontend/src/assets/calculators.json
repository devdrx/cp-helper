{
  "calculators": {
    "Number-theory": {
      "isPrime": {
        "description": "Check if a number is prime",
        "inputs": [
          { "name": "n", "type": "number", "description": "Number to check" }
        ],
        "output": { "type": "boolean", "description": "True if n is prime" },
        "logicFn": "isPrime"
      },
      "gcd": {
        "description": "Compute GCD of two numbers",
        "inputs": [
          { "name": "a", "type": "number" },
          { "name": "b", "type": "number" }
        ],
        "output": { "type": "number" },
        "logicFn": "gcd"
      }
    },
    "Combinatorics": {
      "nCr": {
        "description": "Compute n choose r",
        "inputs": [
          { "name": "n", "type": "number" },
          { "name": "r", "type": "number" }
        ],
        "output": { "type": "number" },
        "logicFn": "nCr"
      }
    }
  }
}
